<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="52dp"
        android:text="@string/welcome"
        android:textColor="@color/accent"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="412dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="96dp"
        android:text="@string/user_name_hint"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Backdrop"
        android:layout_width="528dp"
        android:layout_height="254dp"

        android:layout_marginTop="644dp"
        android:src="@drawable/backdrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tasksIconOff"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="752dp"
        android:src="@drawable/tasks_icon"
        app:layout_constraintStart_toStartOf="@+id/Backdrop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/projectsIconOn"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="752dp"
        android:src="@drawable/projects_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileIconOff"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="752dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/projectsList"
        android:layout_width="411dp"
        android:layout_height="581dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>